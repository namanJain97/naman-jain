import os
import pandas as pd

# Read the CSV files
file1_path = pd.read_csv('C:\Users\jainnbr\masFxGlobalFxGblo12062023DataWithHistory.csv')
file2_path = pd.read_csv('C:\Users\jainnbr\masFxSystemX12062023DataWithHistory.csv')

try:
    # Read the CSV files
    file1 = pd.read_csv(file1_path)
    file2 = pd.read_csv(file2_path)

    # Combine the files using concat
    combined = pd.concat([file1, file2], ignore_index=True)

    # Specify the output file path
    output_file = 'combined.csv'

    # Write the combined data to a new CSV file
    combined.to_csv(output_file, index=False)

    # Print the full path of the output file
    output_path = os.path.abspath(output_file)
    print("The combined CSV file is saved at:", output_path)

except FileNotFoundError:
    print("One or both input files not found. Please check the file paths.")
